{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content|raw }}</td>
                {# raw permet de transformer le tag html ex: <img src=""> en l'image en question #}
            </tr>
        </tbody>
    </table>


    <!-- Show Uploaded Images -->
    <div class="image">
        {% for image in post.attachments %}
            <img src="{{ asset(image.path) }}" alt="{{ image.path }}" width="100">
        {% endfor %}
    </div>
    <!-- End Uploaded Images -->

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
